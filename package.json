{
  "name": "@codetanzania/ewea-api-client",
  "version": "0.12.0",
  "description": "http client for EWEA API.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "clean": "rimraf lib dist es umd",
    "prebuild": "npm test && npm run clean",
    "build": "rollup -c",
    "lint": "eslint --fix --ext .js src/ test/ rollup.config.js",
    "pretest": "npm run lint",
    "test": "NODE_ENV=test mocha --require @babel/register test/**/*.spec.js",
    "cmt": "git add -A && git-cz",
    "changelog": "changelog -x chore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeTanzania/ewea-api-client.git"
  },
  "keywords": [
    "codetanzania",
    "ewea",
    "ewea-api",
    "ewea-api-client",
    "http",
    "axios"
  ],
  "contributors": [
    {
      "name": "Benson Maruchu",
      "email": "benmaruchu@gmail.com",
      "url": "https://github.com/BenMaruchu"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeTanzania/ewea-api-client/issues"
  },
  "homepage": "https://github.com/CodeTanzania/ewea-api-client#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/travis-cli": "^8.3.5",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.2",
    "generate-changelog": "^1.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "nock": "^12.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.0.2"
  },
  "dependencies": {
    "@lykmapipo/common": ">=0.30.7",
    "@lykmapipo/env": ">=0.16.9",
    "axios": ">=0.19.2",
    "form-data": ">=3.0.0",
    "inflection": ">=1.12.0",
    "jwt-decode": ">=2.2.0",
    "lodash": ">=4.17.15",
    "moment": ">=2.24.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
