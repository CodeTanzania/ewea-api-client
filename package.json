{
  "name": "@codetanzania/ewea-api-client",
  "version": "0.8.0",
  "description": "http client for EWEA API.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "clean": "rimraf lib dist es umd",
    "prebuild": "npm test && npm run clean",
    "build": "rollup -c",
    "lint": "eslint --fix --ext .js src/ test/ rollup.config.js",
    "pretest": "npm run lint",
    "test": "NODE_ENV=test mocha --require @babel/register test/**/*.spec.js",
    "cmt": "git add -A && git-cz",
    "changelog": "changelog -x chore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeTanzania/ewea-api-client.git"
  },
  "keywords": [
    "codetanzania",
    "ewea",
    "ewea-api",
    "ewea-api-client",
    "http",
    "axios"
  ],
  "contributors": [
    {
      "name": "Benson Maruchu",
      "email": "benmaruchu@gmail.com",
      "url": "https://github.com/BenMaruchu"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeTanzania/ewea-api-client/issues"
  },
  "homepage": "https://github.com/CodeTanzania/ewea-api-client#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/register": "^7.7.7",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/travis-cli": "^8.2.0",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-prettier": "^3.1.2",
    "generate-changelog": "^1.8.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "nock": "^11.7.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.14"
  },
  "dependencies": {
    "@lykmapipo/common": ">=0.29.1",
    "@lykmapipo/env": ">=0.16.1",
    "axios": ">=0.19.0",
    "inflection": ">=1.12.0",
    "jwt-decode": "^2.2.0",
    "lodash": ">=4.17.15",
    "moment": ">=2.24.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
